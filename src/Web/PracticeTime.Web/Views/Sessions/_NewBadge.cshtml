@model PracticeTime.Web.Models.SessionEntryViewModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Congratulations! You've earned a new badge</h3>
    </div>
    <div class="panel-body">
        <h4>@Model.BadgeAward.C_Badge.Name</h4>
        <div>
            <div>
                <img class="col-md-3" src="~/Content/@Model.BadgeAward.C_Badge.ImageUrl" />
            </div>
            <div class="col-md-8">
                @Model.BadgeAward.C_Badge.Description
            </div>
        </div>
        
    </div>
</div>