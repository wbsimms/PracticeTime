@model PracticeTime.Web.Models.AdminViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-5">
        @using (Html.BeginForm("Associate", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(s => s.SelectedStudent, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.SelectedStudent, Model.Students, new Dictionary<string, object>()
            {
                {"class","form-control"}
            })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(s => s.SelectedInstructor, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.SelectedInstructor,Model.Instructors, new {@class ="col-md-2 form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
        }
    </div>
</div>

@section scripts  {
    @Scripts.Render("~/Scripts/PracticeTime-Admin-Associate.cs")
    @Scripts.Render("~/bundles/jqueryval")
}
